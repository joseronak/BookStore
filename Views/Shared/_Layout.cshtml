<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStoreTry</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookStoreTry.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
</head>
<body>
    <header class="nav-items">
        <a style="text-decoration: none; color: white; font-size: 22px" asp-area="" asp-controller="Home" asp-action="Index" id="home-logo">MyBookStore.fun</a>
        <div class="nav-item mid">
            <a>New Arrivals</a>
            <a>Best Selling</a>
            <a>Fictional</a>
            <a>Non Fictional</a>
        </div>
        <div class="nav-item end" id="nav-item">
            <a style="text-decoration: none; color: white;" asp-area="Identity" asp-page="/Account/Login">Login/Register</a>
            <span>|</span>
            <a>Cart</a>
        </div>
    </header>
    <div>
        <main>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BookStoreTry - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
