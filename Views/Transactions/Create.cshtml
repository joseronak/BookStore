@model BookStoreTry.Models.Transactions

<h2>Create Transaction</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="UserId">User</label>
        <select asp-for="UserId" asp-items="@(new SelectList(ViewBag.Users, "UserId", "Username"))" class="form-control"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookId">Book</label>
        <select asp-for="BookId" asp-items="@(new SelectList(ViewBag.Books, "BookId", "Title"))" class="form-control"></select>
        <span asp-validation-for="BookId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
