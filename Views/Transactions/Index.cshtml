@model IEnumerable<BookStoreTry.Models.Transactions>

<h2>Transactions</h2>

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Book</th>
            <th>Quantity</th>
            <th>Transaction Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.User.Username</td>
                <td>@transaction.Book.Title</td>
                <td>@transaction.Quantity</td>
                <td>@transaction.TransactionDate</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">New Transaction</a>
