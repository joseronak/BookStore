@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="register-section">
    <h1>Join our family</h1>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="register-input-inner-container">
            <div class="input-pair">
                <div class="input-label-pair">
                    <input class="form-control" autocomplete="" aria-required="true" placeholder="First Name" />
                </div>
                <div class="input-label-pair">
                    <input class="form-control" placeholder="Last Name" />
                </div>
            </div>
            <div class="input-pair">
                <div class="input-label-pair">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Email" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="input-label-pair">
                    <input class="form-control" placeholder="Mobile" />
                </div>
            </div>
            <div class="input-pair">
                <div class="input-label-pair">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="input-label-pair">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                
            </div>
        
            <div class="submit-btn">
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="margin-top: 20px">Register Now</button>
            </div>
        </div>
        <div class="alter-link">

            <p>
                <a asp-area="Identity" asp-page="/Account/Login">I have an account already</a>
            </p>

        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
